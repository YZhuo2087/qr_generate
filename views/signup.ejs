<!-- Sign Up Form -->
<form id="signup-form" action="/signup" method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" required /><br />

  <label for="signup-password">Password:</label>
  <input type="password" id="signup-password" name="password" required /><br />

  <label for="signup-email">Email:</label>
  <input type="email" id="signup-email" name="email" /><br />

  <label for="signup-phone">Phone Number:</label>
  <input type="text" id="signup-phone" name="phone" /><br />

  <label for="signup-room">Room Number:</label>
  <input type="text" id="signup-room" name="room_number" /><br />

  <div class="btn-container">
    <button type="submit">Sign Up</button>
    <button type="button" onclick="showLogin()">Back to Login</button>
  </div>
</form>
